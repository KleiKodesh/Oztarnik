                            <TextBlock Text="גודל גופן התחלתי בספרים:  "/>
                            <TextBlock Text="{Binding Value, ElementName=FontSlider}"/>
                        </StackPanel>

                        <Slider x:Name="FontSlider" 
                                Minimum="12" Maximum="72" 
                                Margin="5"
