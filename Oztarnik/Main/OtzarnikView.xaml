                    <Style TargetType="Separator">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Height" Value="0.5"/>
                    </Style>
                </TabItem.Resources>
                <TabItem.DataContext>
                    <local:SettingsViewModel/>
                </TabItem.DataContext>

